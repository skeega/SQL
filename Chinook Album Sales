--SQL QUESTIONS:

--Show Customers (their full names, customer ID, and country) who are not in the US. (Hint: != or <> can be used to say "is not equal to").
--Method 1
SELECT CustomerId
,FirstName
,LastName
,Country
FROM chinook.customers
WHERE Country <> "United States"
;
--Method 2
SELECT FirstName, LastName, CustomerId, Country 
FROM chinook.customers 
WHERE Country != "USA";
--Show only the Customers from Brazil.
--Method 1
SELECT CustomerId
,FirstName
,LastName
,Country
FROM chinook.customers
WHERE Country = "Brazil"
;
--Method 2
SELECT * FROM chinook.customers 
WHERE Country = "Brazil" ;
--Find the Invoices of customers who are from Brazil. The resulting table should show the customer's full name, Invoice ID, Date of the invoice, and billing country.
--Check table fields:
SELECT *
FROM Invoices
Limit 5
;
--Method 1
SELECT distinct customers.CustomerId
,customers.FirstName
,customers.LastName
,customers.Country
,invoices.InvoiceID
,invoices.InvoiceDate
,invoices.BillingCountry
FROM chinook.invoices
LEFT JOIN chinook.customers
ON customers.CustomerId=invoices.CustomerId
WHERE Country = "Brazil" 
;
--Method 2
SELECT cust.FirstName, cust.LastName, inv.InvoiceId, inv.BillingCountry, inv.InvoiceDate
FROM chinook.invoices as inv 
LEFT JOIN chinook.customers as cust 
on inv.CustomerId = cust.CustomerId 
WHERE inv.BillingCountry = "Brazil"
;
--Show the Employees who are Sales Agents.
--Method 1
SELECT *
FROM chinook.employees
WHERE employees.title LIKE "%Agent%"
;
--Method 2
SELECT * FROM chinook.Employees
WHERE Title = "Sales Support Agent" ;
--Find a unique/distinct list of billing countries from the Invoice table.
--Method 1
SELECT DISTINCT invoices.BillingCountry
FROM chinook.invoices
;
--Method 2
SELECT DISTINCT BillingCountry FROM chinook.Invoices ;
--Provide a query that shows the invoices associated with each sales agent. The resulting table should include the Sales Agent's full name.
--Method 1
SELECT invoices.InvoiceId
, employees.FirstName
, employees.LastName
FROM chinook.employees
JOIN chinook.customers
ON employees.EmployeeId=customers.SupportRepId
    JOIN chinook.invoices
    ON customers.CustomerId=invoices.CustomerId
;
--Method 2
SELECT emp.LastName, emp.Firstname, inv.InvoiceId
FROM chinook.Employees emp 
JOIN chinook.Customers cust ON cust.SupportRepId = emp.EmployeeId
JOIN chinook.Invoices Inv ON Inv.CustomerId = cust.CustomerId;
--Show the Invoice Total, Customer name, Country, and Sales Agent name for all invoices and customers.
--Method 1
SELECT customers.FirstName
,customers.LastName
,customers.Country
,invoices.total
,employees.FirstName
,employees.LastName
FROM chinook.employees
JOIN chinook.customers
ON employees.EmployeeId=customers.SupportRepId
    JOIN chinook.invoices
    ON customers.CustomerId=invoices.CustomerId
;
--Method 2
SELECT emp.LastName, emp.Firstname, cust.FirstName, cust.LastName, cust.Country, inv.total
FROM chinook.employees emp 
JOIN chinook.Customers cust ON cust.SupportRepId = emp.EmployeeId
JOIN chinook.Invoices Inv ON Inv.CustomerId = cust.CustomerId;
--How many Invoices were there in 2009?
--Method 1
SELECT COUNT(invoices.InvoiceDate)
FROM chinook.invoices
WHERE invoices.InvoiceDate LIKE "2009%"
;
--Method 2
SELECT COUNT(*)
FROM chinook.Invoices
WHERE InvoiceDate BETWEEN '2009-01-01' AND '2009-12-31';
--What are the total sales for 2009?
--Method 1
SELECT SUM(invoices.Total)
FROM chinook.invoices
WHERE invoices.InvoiceDate LIKE "2009%"
;
--Method 2
SELECT SUM(Total)
FROM chinook.Invoices
WHERE InvoiceDate BETWEEN '2009-01-01' AND '2009-12-31';
--Write a query that includes the purchased track name with each invoice line ID.
--Method 1
SELECT invoice_items.InvoiceId
, tracks.Name
FROM chinook.invoice_items
JOIN chinook.tracks ON tracks.TrackId=invoice_items.TrackId
;
--Method 2
SELECT t.Name, i.InvoiceLineId
FROM chinook.Invoice_items i
JOIN chinook.Tracks t 
ON i.TrackId = t.TrackId;
--Write a query that includes the purchased track name AND artist name with each invoice line ID.
--Method 1
SELECT invoice_items.InvoiceLineID
, tracks.Name
, artists.Name
FROM chinook.invoice_items
LEFT JOIN chinook.tracks 
ON invoice_items.TrackId=tracks.TrackId
INNER JOIN chinook.albums 
ON albums.AlbumId=tracks.AlbumId
LEFT JOIN chinook.artists
ON artists.ArtistId=albums.ArtistId
;
--Method 2
SELECT ar.name as Artist, t.Name as Track, i.InvoiceLineId
FROM chinook.Invoice_items i
LEFT JOIN chinook.tracks t 
ON i.TrackID=t.TrackID
INNER JOIN chinook.albums a
ON a.AlbumID=t.AlbumID
LEFT JOIN chinook.artists ar
ON ar.ArtistID=a.ArtistID;
--Provide a query that shows all the Tracks, and include the Album name, Media type, and Genre.
--Method 1
SELECT tracks.Name
, albums.Title
, genres.Name
, media_types.Name
FROM chinook.tracks
JOIN chinook.albums
ON tracks.AlbumId=albums.AlbumId
JOIN chinook.media_types
ON tracks.MediaTypeId=media_types.MediaTypeId
JOIN chinook.genres
ON tracks.GenreId=genres.GenreId
;
--Method 2
SELECT t.Name AS 'Track Name', a.Title AS 'Album Title', m.Name AS 'Media Type', g.Name AS 'Genre'
FROM chinook.tracks t
JOIN chinook.Albums a 
on a.AlbumId = t.AlbumId
JOIN chinook.Media_Types m
on m.MediaTypeId = t.MediaTypeId
JOIN chinook.Genres g
on g.GenreId = t.GenreId;
--Show the total sales made by each sales agent.
--Method 1
SELECT employees.FirstName
, employees.LastName
, SUM(invoices.Total)
FROM chinook.employees
JOIN chinook.customers
ON customers.SupportRepId=employees.EmployeeId
JOIN chinook.invoices
ON invoices.CustomerId=customers.CustomerId
WHERE employees.title LIKE '%Agent%'
GROUP BY employees.FirstName
;
--Method 2
SELECT emp.FirstName, emp.LastName,
ROUND(SUM(Inv.Total), 2) as 'Total Sales' 
FROM chinook.Employees emp

JOIN chinook.Customers cust 
ON cust.SupportRepId = emp.EmployeeId

JOIN chinook.Invoices Inv 
ON Inv.CustomerId = cust.CustomerId

WHERE emp.Title = 'Sales Support Agent' 
GROUP BY emp.FirstName;
--Which sales agent made the most dollars in sales in 2009?
--Method 1
SELECT employees.FirstName
, employees.LastName
, SUM(invoices.Total)
FROM chinook.employees
JOIN chinook.customers
ON customers.SupportRepId=employees.EmployeeId
JOIN chinook.invoices
ON invoices.CustomerId=customers.CustomerId
WHERE invoices.InvoiceDate LIKE "2009%"
AND employees.title LIKE '%Agent%'
GROUP BY employees.FirstName
ORDER BY sum(invoices.Total) DESC
LIMIT 1
;
--Method 2
SELECT emp.FirstName, emp.LastName,
ROUND(SUM(Inv.Total), 2) as 'Total Sales' 
FROM chinook.Employees emp

JOIN chinook.Customers cust 
ON cust.SupportRepId = emp.EmployeeId

JOIN chinook.Invoices Inv 
ON Inv.CustomerId = cust.CustomerId

WHERE emp.Title = 'Sales Support Agent' 
AND Inv.InvoiceDate LIKE '2009%' 
GROUP BY emp.FirstName
ORDER BY (round(sum(Inv.Total), 2))  DESC LIMIT 1;
